<%= form_for @review do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %> <br>
    <%= f.label :content %>
    <%= f.text_area :content %> <br>
    <%= f.label :rating %>
    <%= f.select :rating, [['1: bad', 1], ['2: ok', 2], ['3: good', 3], ['4: great', 4], ['5: excelent', 5]] %> <br>
    <%= f.submit 'Submit', class: 'btn' %>
<%end%>

