<%= form_with(url: search_path, method: 'get', local: true) do %>
  <div class="form-group">
    <%= label_tag :title, 'Search for a title '%>
    <%= text_field_tag :title, nil, placeholder: 'Eg. Call of the Wild', class: 'form-control' %>
    <%= button_tag 'Search', class: 'btn' %>
  </div>
<% end %>

<% if flash[:alert] %>
  <div class="alert alert-warning"><%= flash[:alert] %></div>
<% end %>